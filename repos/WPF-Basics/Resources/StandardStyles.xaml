<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System.Windows;assembly=PresentationFramework">


    <sys:Thickness x:Key="StdMargin">4</sys:Thickness>

    <Style TargetType="Menu">
        <Setter Property="Padding" Value="{StaticResource StdMargin}"/>
    </Style>
    <Style TargetType="Label">
        <Setter Property="Margin" Value="{StaticResource StdMargin}"/>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Margin" Value="{StaticResource StdMargin}"/>
    </Style>
    <Style TargetType="ComboBox">
        <Setter Property="Margin" Value="{StaticResource StdMargin}"/>
    </Style>
    <Style TargetType="DatePicker">
        <Setter Property="Margin" Value="{StaticResource StdMargin}"/>
    </Style>

    
</ResourceDictionary>