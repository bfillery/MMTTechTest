<Window x:Class="WPFDataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" MinWidth="300" MinHeight="350">

   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <DataGrid ItemsSource="{Binding Path=DataCollection}" Grid.RowSpan="1"  Grid.Row="1" />

        <Menu Grid.Row="0" Grid.RowSpan="1">
            <MenuItem Header="_File">
                <MenuItem Header="_Products" Click="MenuItem_Click" />
                <Separator />
                <MenuItem Header="E_xit"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="C_ut"/>
                <MenuItem Header="_Copy"/>
                <MenuItem Header="_Paste"/>
            </MenuItem>
        </Menu>

        <Grid Name="contentArea" Grid.Row ="1" Grid.RowSpan="1" >
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
        </Grid>
    </Grid>


</Window>